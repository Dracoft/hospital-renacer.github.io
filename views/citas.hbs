<h1>Hospital Renacer</h1>
<h2>LISTADO DE CITAS</h2>
<table  border="1">
<thead>
    <tr>
        <th>Nombre Paciente</th>
        <th>Cedula Paciente</th>
        <th>Nombre Doctor</th>
        <th>Consultorio</th>
        <th>Especialidad</th>
        <th>Fecha</th>
        <th>Opciones</th>
    </tr>
</thead>
<tbody>
    {{#each citas}}
    <tr>
        <form action="/citas/actualizar/{{id}}" method="post"></form>
        <td><input type="text" value="{{nombre_paciente}}" disabled></td>
        <td><input type="text" value="{{cedula_paciente}}" disabled></td>
        <td><input type="text" value="{{nombre_doctor}} {{apellido_doctor}}" disabled></td>
        <td><input type="text" value="{{consultorio}}" disabled></td>
        <td><input type="text" value="{{especialidad}}" disabled></td>
        <td><input type="text" id="fecha" name="fecha" value="{{formatoFecha fecha}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td>
            {{#if ../estado}}
            <a href="/citas/eliminar/{{id}}">Eliminar</a> <br><br>
            <a href="/citas/enviar/{{@key}}">Actualizar</a>
            {{else}}
            <input type="submit" value="Enviar">
            {{/if}}
            </td>
            </form>
        </tr>
        {{/each}}
</tbody>
</table>
<a class="volver" href="/">Volver</a>
<a href="citas/agregar-cita">Nueva cita</a>