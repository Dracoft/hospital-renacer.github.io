<h1>Hospital Renacer</h1>
<h2>LISTADO DE PACIENTES</h2>
<table border="1">
    <thead>
        <tr>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Cedula</th>
        <th>Especialidad</th>
        <th>Consultorio</th>
        <th>Correo</th>
        <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each doctores}}
        <tr>
            <form action="/doctores/actualizar/{{cedula}}" method="post">
            <td><input type="text" id="nombre_doctor" name="nombre_doctor" value="{{nombre}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="text" id="apellido_doctor" name="apellido_doctor" value="{{apellido}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="text" id="cedula" name="cedula" value="{{cedula}}" disabled></td>
            <td><input type="text" id="especialidad" name="especialidad" value="{{especialidad}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="tel" id="consultorio" name="consultorio" value="{{consultorio}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="tel" id="correo_doctor" name="correo_doctor" value="{{correo}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td>
            {{#if ../estado}}
            <a href="/doctores/eliminar/{{cedula}}">Eliminar</a> <br><br>
            <a href="/doctores/enviar/{{@key}}">Actualizar</a>
            {{else}}
            <input type="submit" value="Enviar">
            {{/if}}
            </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<a class="volver" href="/">Volver</a>
<a href="doctores/agregar-doctores">Agregar Doctores</a>